@model Category

<form method="post" asp-action="Edit">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="number" asp-for="DisplayOrder" class="form-control" required min="0" max="100" />
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form> 